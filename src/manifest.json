{
  "name": "Lazy River",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Find ebooks from Amazon.com on Lib Genesis",
  "background": {
    "scripts": [
      "resources/js/utils.js",
      "resources/js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*/dp/*",
        "https://*.amazon.com/*/dp/*"
      ],
      "css": [
        "resources/css/content.css"
      ],
      "js": [
        "resources/js/content.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "https://*.amazon.com/*/dp/*",
    "https://*.amazon.com/*/dp/*",
    "http://*.libgen.io/*",
    "tabs"
  ]
}
